# Configurações de Produção - Azure
DATABASE_URL=postgresql://username:password@server.postgres.database.azure.com:5432/gaphunter
SECRET_KEY=your-super-secret-key-for-production-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Azure Storage (opcional)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=gaphunter-uploads

# Configurações de Email (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configurações de Produção
ENVIRONMENT=production
DEBUG=False
CORS_ORIGINS=["https://your-frontend-domain.azurewebsites.net"]

# Configurações de Pagamento (Stripe exemplo)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

